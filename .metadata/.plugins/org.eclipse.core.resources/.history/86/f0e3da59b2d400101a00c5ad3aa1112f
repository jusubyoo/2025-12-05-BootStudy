package com.sist.web.service;

import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import com.sist.web.SpringBootThymeLeaftProject3Application;
import com.sist.web.mapper.BoardMapper;
import com.sist.web.vo.BoardVO;

@Service
public class BoardServiceImpl implements BoardService {

    private final SpringBootThymeLeaftProject3Application springBootThymeLeaftProject3Application;
	@Autowired
	private BoardMapper bMapper;

    BoardServiceImpl(SpringBootThymeLeaftProject3Application springBootThymeLeaftProject3Application) {
        this.springBootThymeLeaftProject3Application = springBootThymeLeaftProject3Application;
    }

	@Override
	public List<BoardVO> boardListData(Map map) {
		// TODO Auto-generated method stub
		return bMapper.boardListData(map);
	}

	@Override
	public int boardRowCount() {
		// TODO Auto-generated method stub
		return bMapper.boardRowCount();
	}

	@Override
	public void boardInsert(BoardVO vo) {
		// TODO Auto-generated method stub
		bMapper.boardInsert(vo);
	}

	@Override
	public BoardVO boardDetailData(int no) {
		// TODO Auto-generated method stub
		bMapper.boardHitIncrement(no);
		return bMapper.boardDetailData(no);
	}

	@Override
	public BoardVO boardUpdateData(int no) {
		// TODO Auto-generated method stub
		return bMapper.boardDetailData(no);
	}

	@Override
	public boolean boardUpdate(BoardVO vo) {
		// TODO Auto-generated method stub
		boolean bCheck=false;
		String db_pwd=bMapper.boardGetPassword(vo.getNo());
		if(db_pwd.equals(vo.getPwd()))
		{
			bCheck=true;
			bMapper.boardUpdate(vo);
		}
		
		return bCheck;
	}


}
